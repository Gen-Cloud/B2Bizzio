{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "brand": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::brand.brand",
      "inversedBy": "products"
    },
    "Name": {
      "type": "text",
      "required": true
    },
    "Description": {
      "type": "text"
    },
    "Barcode": {
      "type": "biginteger",
      "unique": true
    },
    "Price": {
      "type": "decimal"
    },
    "Promotional": {
      "type": "boolean",
      "default": false
    },
    "Picture": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "Color": {
      "type": "enumeration",
      "enum": [
        "green",
        "red",
        "blue",
        "yellow"
      ]
    }
  }
}
